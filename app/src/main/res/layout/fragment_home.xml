<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Birre preferite"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favorite_beers_recycler"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                />
            <Button
                android:id="@+id/favorite_beers_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_gravity="end"
                android:padding="10dp"
                android:background="@drawable/rounded_style"
                android:text="Mostra tutte"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Birre popolari"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popular_beers_recycler"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                />
            <Button
                android:id="@+id/popular_beers_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_gravity="end"
                android:padding="10dp"
                android:background="@drawable/rounded_style"
                android:text="Mostra tutte"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Bar popolari"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popular_bar_recycler"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                />
            <Button
                android:id="@+id/popular_bar_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_gravity="end"
                android:padding="10dp"
                android:background="@drawable/rounded_style"
                android:text="Mostra tutte"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>