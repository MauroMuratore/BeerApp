<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_user"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/baseline_account_circle_24"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_username"
        />

    <TextView
        android:id="@+id/title_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="22dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/icon_user"
        app:layout_constraintLeft_toRightOf="@id/icon_user"
        app:layout_constraintBottom_toBottomOf="@id/icon_user"
        />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/icon_user"
        />

    <Button
        android:id="@+id/btn_gestione_profilo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gestione profilo"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="70dp"
        app:layout_constraintTop_toBottomOf="@id/icon_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_following"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Seguiti"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="70dp"
        app:layout_constraintTop_toBottomOf="@id/btn_gestione_profilo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_privacy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Privacy"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="70dp"
        app:layout_constraintTop_toBottomOf="@id/btn_following"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_impostazioni"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Impostazioni"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="70dp"
        app:layout_constraintTop_toBottomOf="@id/btn_privacy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="70dp"
        app:layout_constraintTop_toBottomOf="@id/btn_impostazioni"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_day_night_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>