<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@android:color/black"
        android:scaleType="fitXY"
        android:src="@drawable/schiuma" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_beerupp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_style"
        android:paddingVertical="15dp"
        android:paddingStart="10dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Username" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_style"
        android:paddingVertical="15dp"
        android:paddingStart="10dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_style"
        android:paddingVertical="15dp"
        android:paddingStart="10dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password" />

    <EditText
        android:id="@+id/etConfermaPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_style"
        android:paddingVertical="15dp"
        android:paddingStart="10dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Conferma Password" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_gravity="center_horizontal"
        android:onClick="createUser"
        android:text="Registrati"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="switchToLogin"
        android:text="Hai giÃ  un account?" />


</LinearLayout>
